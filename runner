#!/bin/bash
log() {
    local level=$1
    local message=$2
    echo "$(date -u +"%Y-%m-%dT%H:%M:%SZ") [${level}] ${message}"
}

log.error() {
    log "ERROR" "$1"
}

log.notice() {
    log "NOTICE" "$1"
}

log.debug() {
    if [ "${DEBUG}" == "true" ]; then
        log "DEBUG" "$1"
    fi
}

log.warning() {
    log "WARNING" "$1"
}
