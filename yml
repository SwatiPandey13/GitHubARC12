# Pin to your Artifactory registry
ARG DOCKER_REGISTRY=artifactory.voya.net/docker-virtual

# STAGE 1: Base image
FROM ${DOCKER_REGISTRY}/openshift/ubi8/openjdk-8:latest AS base

# Install tools
USER root
RUN microdnf update -y && \
    microdnf install -y wget tar gzip which && \
    microdnf clean all

# STAGE 2: GitHub Runner
FROM ${DOCKER_REGISTRY}/openshift/actions/action-runner:latest AS runner

# STAGE 3: Final image
FROM base
