# 1. Build the image
docker build -t artifactory.voya.net/docker-virtual/openshift/custom-runner:latest .

# 2. Test the runner
docker run --rm artifactory.voya.net/docker-virtual/openshift/custom-runner:latest

# 3. Verify Java versions
docker run --rm artifactory.voya.net/docker-virtual/openshift/custom-runner:latest \
  sh -c "java -version && /usr/lib/jvm/jdk11/bin/java -version"
