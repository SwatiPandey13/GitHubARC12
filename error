# Replace the container hooks installation with this corrected version
RUN cd /home/runner \
    && curl -fL -o actions-runner-hooks.tar.gz \
        "https://github.com/actions/runner-container-hooks/releases/download/v${RUNNER_CONTAINER_HOOKS_VERSION}/actions-runner-hooks-${RUNNER_CONTAINER_HOOKS_VERSION}-noarch.tar.gz" \
    && tar xzf actions-runner-hooks.tar.gz \
    && rm actions-runner-hooks.tar.gz
